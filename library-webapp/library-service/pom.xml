                                            </wsdl>
                                        </wsdlOption>
                                        <wsdlOption>
                                            <wsdl>
                                                https://raw.githubusercontent.com/xbreizh/biblio/7dfebd539e50f2b83c0956810aef3eb879762222/library-webservice/troparo-web/src/main/resources/org/troparo/web/services/docker/ConnectService.wsdl
