        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>library-service</artifactId>

    <profiles>
        <!-- Profile utilisé pour lancer les tests d'intégration de la couche Web -->
        <profile>
            <id>test-service-local</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.cxf</groupId>
                        <artifactId>cxf-codegen-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <execution>
                                <configuration>
                                    <sourceRoot>generated/java</sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            <wsdl>
                                                https://raw.githubusercontent.com/xbreizh/biblio/8234a9a094faf609b4192266257a490fae734114/library-webservice/troparo-web/src/main/resources/org/troparo/web/services/local/MemberService.wsdl
                                            </wsdl>
                                        </wsdlOption>
                                        <wsdlOption>
                                            <wsdl>
                                                https://raw.githubusercontent.com/xbreizh/biblio/e55e818777d5f229ed842267a8284fc637f785c9/library-webservice/troparo-web/src/main/resources/org/troparo/web/services/local/LoanService.wsdl
                                            </wsdl>
                                        </wsdlOption>
